<div id="logo">Retr0 Studios</div>
<div id="connecting">Connecting to server...</div>
<button id="playBtn">PLAY</button>

<!-- iframe będzie generowany po kliknięciu -->
<iframe id="gameFrame" src=""></iframe>

<script>
  const animationDuration = 4000; // czas animacji logo
  const connectingDuration = 2000; // czas Connecting

  setTimeout(() => {
    document.getElementById('logo').style.display = 'none';
    const connecting = document.getElementById('connecting');
    connecting.style.display = 'block';

    setTimeout(() => {
      connecting.style.display = 'none';
      const playBtn = document.getElementById('playBtn');
      playBtn.style.display = 'block';

      // Kliknięcie przycisku
      playBtn.addEventListener('click', () => {
        playBtn.style.display = 'none';
        const iframe = document.getElementById('gameFrame');
        iframe.src = "https://yee.pages.dev/";
        iframe.style.display = 'block';
      });
    }, connectingDuration);

  }, animationDuration);
</script>

